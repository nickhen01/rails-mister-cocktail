<h2><%= @cocktail.name %></h2>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.description %> <%= Ingredient.find(dose.ingredient_id).name %></li>
    <%= link_to "delete", cocktail_dose_path(dose.cocktail, dose), method: "delete", data: {confirm: "Are you sure"} %>
  <% end %>
</ul>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail.id) %>
<%= link_to 'Home', cocktails_path %>
